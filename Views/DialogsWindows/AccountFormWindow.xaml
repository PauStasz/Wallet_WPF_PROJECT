<Window x:Class="Wallet.Views.DialogsWindows.AccountFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet.Views.DialogsWindows"
        mc:Ignorable="d"
        Title="AccountFormWindow" Height="320" Width="400" Background="#FF1A1919">
    <StackPanel Orientation="Vertical">
        <StackPanel Margin="20">
            <Label Content="Nazwa" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5" />
            <TextBox Padding="0 5 0 5" FontSize="16" Style="{StaticResource textbox1}" />
        </StackPanel>
        <StackPanel Margin="20">
            <Label Content="Saldo" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5" />
            <TextBox Padding="0 5 0 5" FontSize="16" Style="{StaticResource textbox1}" />
        </StackPanel>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Content="ZAPISZ" Margin="10" Padding="2" FontWeight="Bold" FontSize="12" BorderBrush="#FFFFFEFE" Background="White" Width="100" Style="{StaticResource whiteBttn}" />
            <Button Grid.Column="1"  Content="ANULUJ" Margin="10" Padding="2" FontWeight="Bold" FontSize="12" BorderBrush="#FFFFFEFE" Background="White" Width="100"   Style="{StaticResource whiteBttn}" />
        </Grid>
    </StackPanel>
</Window>
