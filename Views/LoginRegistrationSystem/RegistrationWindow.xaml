<Window x:Class="Wallet.Views.LoginRegistrationSystemViews.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet.Views.LoginRegistrationSystemViews"
        xmlns:components="clr-namespace:PasswordBoxMVVM.Components;assembly=PasswordBoxMVVM"
        mc:Ignorable="d"
        Title="Registration" Height="598" Width="875" Foreground="Black" Background="#FF1A1919">

    <Grid Margin="30,10,386,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="42"/>
            <RowDefinition Height="auto" MinHeight="345.22"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="30"
            Text="REJESTRACJA" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Width="193" />

        <Grid Margin="70,1,70,-122" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" MinHeight="77.96" />
                <RowDefinition Height="auto" MinHeight="23.62" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10,10,10,10">
                <TextBlock Text="Imię" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="10,5,10,10">
                <TextBlock Text="Nazwisko" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5"/>
                <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" FontSize="16"/>
            
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="10,5,10,10">
                <TextBlock Text="Pseudonim" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5"/>
                <TextBox Text="{Binding Nick, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" FontSize="16"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="10,5,10,10">
                <TextBlock Text="E-mail" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" FontSize="16" />
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="10,5,10,10">
                <TextBlock Text="Hasło" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 0"/>
                <components:BindablePasswordBox Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" Height="42" FontSize="16"  />
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="10,5,10,10" >
                <TextBlock Text="Potwierdź hasło" HorizontalAlignment="Center" Foreground="White" Padding="0 5 0 0"/>
                <components:BindablePasswordBox Password="{Binding PasswordCheck, UpdateSourceTrigger=PropertyChanged}" Padding="0 5 0 5" Height="42" FontSize="16" />

            </StackPanel>

            <Button Grid.Row="6" Content="ZAREJESTRUJ SIĘ" 
                    Margin="61,5,55,-12" Padding="5 5 5 5" 
                    FontWeight="Bold" FontSize="14" 
                    BorderBrush="#FFFFFEFE" Background="White" 
                    Command="{Binding SubmitCommand}"
                    />
        </Grid>
    </Grid>
</Window>
